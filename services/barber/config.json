{
  "name": "barber",
  "port": 8080,
  "origins": [
    "http://easy-cut.ovh",
    "https://easy-cut.ovh",
    "http://localhost"
  ],
  "domain": "https://easy-cut.eu.auth0.com/",
  "api": "api/v2/",
  "tprefix": "auth0|",
  "oauth": "oauth/token",
  "services": [
    {
      "name": "security",
      "url": "http://auth:8080"
    },
    {
      "name": "user",
      "url": "http://user:8080"
    },
    {
      "name": "elasticsearch",
      "url": "http://elasticsearch:9200"
    }
  ],
  "sfile": "/run/secrets/auth0_api",
  "routes": [
    {
      "match_user": false,
      "route": "/status",
      "permissions": []
    },
    {
      "match_user": true,
      "route": "/create.*",
      "permissions": ["User"]
    },
    {
      "match_user": true,
      "route": "/update.*",
      "permissions": ["User", "Barber"]
    },
    {
      "match_user": false,
      "route": "/get.*",
      "permissions": [
        "User"
      ]
    },
    {
      "match_user": false,
      "route": "/list",
      "permissions": [
        "User"
      ]
    }
  ]
}
