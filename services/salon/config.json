{
  "name": "salon",
  "version": "1.0.0",
  "port": 8080,
  "origins": [
    "http://easy-cut.ovh",
    "https://easy-cut.ovh",
    "http://localhost"
  ],
  "oauth": {
    "use": true,
    "domain": "https://easy-cut.eu.auth0.com/",
    "extension": "oauth/token",
    "audience": "https://easy-cut.eu.auth0.com/api/v2/"
  },
  "api": {
    "use": false
  },
  "services": [
    {
      "name": "security",
      "url": "http://auth:8080"
    },
    {
      "name": "user",
      "url": "http://user:8080"
    },
    {
      "name": "elasticsearch",
      "url": "http://elasticsearch:9200"
    },
    {
      "name": "perms",
      "url": "http://perms:8080"
    }
  ],
  "routes": [
    {
      "route": "/status",
      "permissions": []
    },
    {
      "route": "/create",
      "permissions": ["User"]
    },
    {
      "route": "/get.*",
      "permissions": ["User"]
    },
    {
      "route": "/list",
      "permissions": ["User"]
    },
    {
      "route": "/delete.*",
      "permissions": ["User", "Salon"]
    },
    {
      "route": "/update.*",
      "permissions": ["User", "Salon"]
    }
  ]
}
